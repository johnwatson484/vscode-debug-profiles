{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node: Launch",
      "program": "${workspaceFolder}/app",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node",
      "serverReadyAction": {
        "pattern": "Server running on",
        "uriFormat": "http://localhost:3000",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Node: Server",
      "program": "${workspaceFolder}/app",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "Node: Client",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Docker: Attach",
      "type": "node",
      "request": "attach",
      "restart": true,
      "remoteRoot": "/home/node",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Docker: Attach Launch",
      "type": "node",
      "request": "attach",
      "remoteRoot": "/home/node",
      "restart": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "preLaunchTask": "compose-debug-up",
      "postDebugTask": "compose-debug-down"
    },
    {
      "name": "Docker: Jest Attach Launch",
      "type": "node",
      "request": "attach",
      "remoteRoot": "/home/node",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "sourceMaps": false,
      "restart": true,
      "preLaunchTask": "compose-test-debug-up",
      "postDebugTask": "compose-test-debug-down"
    },
    {
      "name": "Node: Jest",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      }
    },
    {
      "name": "Node: Jest Current File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "${fileBasenameNoExtension}",
        "--config",
        "jest.config.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      }
    }
  ],
  "compounds": [
    {
      "name": "Node: Client/Server",
      "configurations": [
        "Node: Server",
        "Node: Client"
      ]
    }
  ]
}
